
use-project /boost : $(/boost) ;
use-project /XmlRpc : $(/XmlRpc) ;
use-project /libtorrent : $(/libtorrent) ;
use-project /TinyXMLSTL : $(/TinyXMLSTL) ;
use-project /WTL : $(/WTL) ;
use-project /osLibs : $(/osLibs) ;

SOURCES =
	Halite.cpp
	stdafx.cpp
	HaliteWindow.cpp
	HaliteListViewCtrl.cpp
	HaliteDialog.cpp
	ConfigOptions.cpp
	halTorrent.cpp
	GlobalIni.cpp
	halXmlRpc.cpp
	;
	
RESOURCES =
	Halite.rc
	;

LIBS = 
	comctl32
	user32
	kernel32
	comdlg32
	advapi32
	gdi32	
	;

project Halite

	: requirements
	
    <library>/XmlRpc//XmlRpc/<link>static
    <library>/libtorrent//torrent/<link>static
    <library>/TinyXMLSTL/<link>static
	
	<library>/WTL
	<library>/osLibs//$(LIBS)
	
	<variant>release:<define>NDEBUG
	
	<toolset>msvc:<define>_UNICODE
	<toolset>msvc:<define>WIN32
	<toolset>msvc:<define>_WINDOWS
	
	<link>static
	
	<toolset>msvc:<linkflags>/SUBSYSTEM:WINDOWS
	;

exe Halite
	:
	./src/$(SOURCES)
	./res/$(RESOURCES)
	;

